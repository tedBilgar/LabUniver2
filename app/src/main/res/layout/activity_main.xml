<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:srcCompat="@drawable/send" android:id="@+id/imageView4" android:paddingBottom="40sp"
                android:paddingTop="70sp"/>
        <TextView
                android:text="Вы являетесь ..."
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:textSize="24sp" android:textStyle="bold" app:fontFamily="serif"
                android:textColor="@android:color/holo_red_light" android:gravity="center"/>
        <Button
                android:text="Заказчиком"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonCust" android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp" android:height="75dp"/>
        <Button
                android:text="Разработчиком"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/buttonDev" android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp" android:height="75dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>