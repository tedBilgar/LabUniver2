<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".EnterDeveloper">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Войти как разработчику"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" android:gravity="center" android:textSize="18sp"
                android:textColor="@android:color/holo_red_dark" android:layout_marginTop="40dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginDevName" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginDevPas" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Войти"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/loginDev" android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
        <TextView
                android:text="Регистрация"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:gravity="center"
                android:layout_marginLeft="50dp" android:layout_marginRight="50dp" android:textSize="18sp"
                android:textColor="@android:color/holo_orange_dark" android:layout_marginTop="50dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regDevName" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regDevPas" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Создать новую запись и войти"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/regDev" android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>