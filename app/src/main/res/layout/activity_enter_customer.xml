<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".EnterCustomer">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:text="Войти"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" android:gravity="center" android:textSize="18sp"
                android:textColor="@android:color/holo_red_light"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginName" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/loginPas" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Login"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/login" android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
        <TextView
                android:text="Регистрация нового участника"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/textView6" android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp" android:gravity="center" android:textSize="18sp"
                android:textColor="#f8a80a"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regName" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/regPas" android:layout_marginLeft="50dp" android:layout_marginRight="50dp"/>
        <Button
                android:text="Register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/registration" android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>